{
    "hooks": {
        "Notification": [
            {
                "matcher": "",
                "hooks": [
                    {
                        "type": "command",
                        "command": "notify-send 'Claude Code' 'Awaiting your input'"
                    }
                ]
            }
        ],
        "UserPromptSubmit": [
            {
                "matcher": "",
                "hooks": [
                    {
                        "type": "command",
                        "command": "echo 'Current directory structure (lsd):' && lsd -l -g -G --group-directories-first && echo ''"
                    },
                    {
                        "type": "command",
                        "command": "if git rev-parse --git-dir >/dev/null 2>&1; then echo 'Git status:' && git status -s -uall --porcelain && echo ''; else echo 'Git status: Not a git repo'; fi"
                    },
                    {
                        "type": "command",
                        "command": "if git rev-parse --git-dir >/dev/null 2>&1; then echo 'Updating Global tags:' && global -u -v; fi"
                    }
                ]
            }
        ]
    }
}
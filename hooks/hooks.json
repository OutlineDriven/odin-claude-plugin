{
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "notify-send 'Claude Code' 'Awaiting your input'"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "dprint fmt ."
          },
          {
            "type": "command",
            "command": "echo 'Current directory structure (lsd):' && lsd -l -g -G --group-directories-first && echo ''"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash|Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Running auto formats with `dprint fmt .`'; dprint fmt ."
          }
        ]
      }
    ]
  }
}
{
    "hooks": {
        "Notification": [
            {
                "matcher": "",
                "hooks": [
                    {
                        "type": "command",
                        "command": "notify-send 'Claude Code' 'Awaiting your input'"
                    }
                ]
            }
        ],
        "UserPromptSubmit": [
            {
                "matcher": "",
                "hooks": [
                    {
                        "type": "command",
                        "command": "echo 'Current directory structure (lsd):' && lsd -l --group-dirs first && echo ''"
                    },
                    {
                        "type": "command",
                        "command": "echo 'Git status:' && git status -s -uall --porcelain && echo ''"
                    }
                ]
            }
        ]
    }
}